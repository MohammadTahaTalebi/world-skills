generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PlatformUser {
  id                  Int         @id @default(autoincrement())
  username            String      @unique
  password            String
  registeredTimestamp DateTime    @default(now())
  lastLoginTimestamp  DateTime    @default(now())
  uploadedGames       Game[]
  gameScores          GameScore[]
  role                Role        @default(user)
}

model AdminUser {
  id                  Int      @id @default(autoincrement())
  username            String   @unique
  password            String
  registeredTimestamp DateTime @default(now())
  lastLoginTimestamp  DateTime @default(now())
}

model GameScore {
  id                   Int          @id @default(autoincrement())
  user                 PlatformUser @relation(fields: [platformUserUsername], references: [username])
  timestamp            DateTime     @default(now())
  score                String
  platformUserUsername String
  game                 Game         @relation(fields: [gameSlug], references: [slug])
  gameSlug             String
}

model Game {
  id                Int          @id @default(autoincrement())
  title             String       @unique
  description       String
  optionalThumbnail String?
  slug              String       @unique
  author            String
  user              PlatformUser @relation(fields: [author], references: [username])
  gameScores        GameScore[]
}

enum Role {
  user
  developer
}
